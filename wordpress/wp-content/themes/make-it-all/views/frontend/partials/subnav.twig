{#
Subnavigation partial for individual pages when they require
navigation within themselves, e.g. for filtering results shown
in the table by categories.
#}

<nav class="side-nav-bar-nested" id="{{ activePage }}-nav">
	{# Show page title and icon #}
	<h1>
		<i class="fa fa-{{ icon }}"></i>
		{{ pages[activePage].name }}
	</h1>

	{# Subtext is the title for the list of links in the subnavigation #}
	<p>{{ subtext }}</p>

	{# Subnavigation links list #}
	<ul>
		{# Create a link for each of the links defined by the page #}
		{% for link in links %}
			<li class="{% if link.active is defined %}active{% endif %} {% if link.breaker is defined %}pt-3{% endif %}" data-slug="{{ link.slug }}">
				{# Each link has icon and title #}
				<i class="fa fa-{{ link.icon }}"></i>
				{{ link.name }}
			</li>
		{% endfor %}

		{# A page may wish to place a button at the end of the navigation
		     as a call-to-action for a prominent function, e.g. new ticket. #}
		{% if button is defined %}
			<li>
				<button class="btn btn-{{ button.type }} {{ button.class }}" data-toggle="modal" data-target="#{{ button.modal }}">
					<i class="fa fa-{{ button.icon }}"></i>
					{{ button.name }}
				</button>
			</li>
		{% endif %}
	</ul>
</nav>
