		{
			"icon": "ticket",
			"subtext": "Categories",
			"links": [
				{
					"name": "All",
					"slug": "new,pending_in_progress,resolved",
					"icon": "envelope-o",
					"active": true
				},
				{
					"name": "All Open",
					"slug": "new,pending_in_progress",
					"icon": "envelope-open-o"
				},
				{
					"name": "Assigned to me",
					"slug": "assigned_to_me",
					"icon": "user-circle-o",
					"breaker": true
				},
				{
					"name": "New",
					"slug": "new",
					"icon": "star-o",
